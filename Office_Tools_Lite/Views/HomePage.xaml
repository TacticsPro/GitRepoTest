<Page
    x:Class="Office_Tools_Lite.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Margin="-30,-30,0,0" Padding="20">
        <Grid>
            <TextBlock Text="Office Tools Lite Lite Home Page" Height="35" Foreground="#1A237E" FontSize="24" FontFamily="Microsoft Sans Serif" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,-30,0,0"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="Btn1" Content="Purchase Adjustments" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Background="#2780e3" Foreground="#ffffff" Width="260" Height="50" Margin="50,0,0,0" Click="pageopener"/>
                    <Button x:Name="Btn2" Content="CN DN Adjustments" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"  FontSize="18" Background="#2780e3" Foreground="#ffffff" Width="260" Height="50" Margin="20,0,0,0" Click="pageopener"/>
                    <Button x:Name="Btn3" Content="Sales Adjustments" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Background="#2780e3" Foreground="#ffffff" Width="260" Height="50" Margin="50,20,0,0" Click="pageopener"/>
                    <Button x:Name="Btn4" Content="GSTR1 Adjustments" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Background="#2780e3" Foreground="#ffffff" Width="260" Height="50" Margin="20,20,0,0" Click="pageopener"/>
                   
                    <Button x:Name="Btn5" Content="Other Tools" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Background="#2780e3" Foreground="#ffffff" Width="260" Height="50" Margin="50,20,0,0" Click="pageopener"/>
                    <Button x:Name="Btn6" Content="Data Entries" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Background="#2780e3" Foreground="#ffffff" Width="260" Height="50" Margin="20,20,0,0" Click="pageopener"/>
                    <Button x:Name="Btn7" Content="XML File Generator" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Background="#2780e3" Foreground="#ffffff" Width="260" Height="50" Margin="50,20,0,0" Click="pageopener"/>

                    <HyperlinkButton x:Name="hyperbutton1" Content="Visit web (Lite)" Grid.Row="4" Grid.Column="0" Margin="-80,80,0,0"/>
                    <HyperlinkButton x:Name="hyperbutton2" Content="Visit web (Full)" Grid.Row="4" Grid.Column="0" Margin="50,80,0,0"/>
                    <HyperlinkButton x:Name="directupdate" Content="Direct upgrade" Grid.Row="4" Grid.Column="0" Margin="180,80,0,0" Foreground="Green"/>
                    
                </Grid>
            </StackPanel>
            
        </Grid>
    </Grid>
</Page>
