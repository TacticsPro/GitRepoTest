<Page
    x:Class="Office_Tools_Lite.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Office_Tools_Lite.Helpers"
    xmlns:behaviors="using:Office_Tools_Lite.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    MinHeight="630"
    MinWidth="950"
    Loaded="OnLoaded">

    <Grid>
        <Image Source="/Assets/BGImage1.jpg" Stretch="UniformToFill" Opacity="0.7"/>
        <Image Source="/Assets/BGImage2.jpg" Stretch="UniformToFill" Opacity="0.5"/>
        <Image Source="/Assets/BGImage3.jpg" Stretch="UniformToFill" Opacity="0.2"/>
        
        <Grid x:Name="AppTitleBar"
              Canvas.ZIndex="1"
              Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
              IsHitTestVisible="True"
              VerticalAlignment="Top">
            <Image Source="/Assets/WindowIcon.ico"
                   HorizontalAlignment="Left"
                   Width="16"
                   Height="16" />
            <TextBlock x:Name="AppTitleBarText"
                       VerticalAlignment="Center"
                       TextWrapping="NoWrap"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Margin="28,0,0,0"/>
            
        </Grid>
        
        <NavigationView
            x:Name="NavigationViewControl"
            Canvas.ZIndex="0"
            IsBackButtonVisible="Visible"
            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}"
            IsSettingsVisible="True"
            ExpandedModeThresholdWidth="1280"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            Header="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="Shell_Home" helpers:NavigationHelper.NavigateTo="Office_Tools_Lite.ViewModels.HomeViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Home"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Purchase_Adjustments" helpers:NavigationHelper.NavigateTo="Office_Tools_Lite.ViewModels.Purchase_AdjustmentsViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="TwoPage"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_CN_DN_Adjustments" helpers:NavigationHelper.NavigateTo="Office_Tools_Lite.ViewModels.CN_DN_AdjustmentsViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Page2"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Sales_Adjustments" helpers:NavigationHelper.NavigateTo="Office_Tools_Lite.ViewModels.Sales_AdjustmentsViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Flag"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Other_Tools" helpers:NavigationHelper.NavigateTo="Office_Tools_Lite.ViewModels.Other_ToolsViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Repair"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Data_Entries" helpers:NavigationHelper.NavigateTo="Office_Tools_Lite.ViewModels.Data_EntriesViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Edit"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Tally_XML" helpers:NavigationHelper.NavigateTo="Office_Tools_Lite.ViewModels.Tally_XMLViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Tag"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_GSTR1_Adjustments" helpers:NavigationHelper.NavigateTo="Office_Tools_Lite.ViewModels.GSTR1_AdjustmentsViewModel">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="MapDrive"/>
                    </NavigationViewItem.Icon>
                    
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock
                            Text="{Binding}"
                            Style="{ThemeResource TitleTextBlockStyle}" />
                    </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>
            <i:Interaction.Behaviors>
                <behaviors:NavigationViewHeaderBehavior
                    DefaultHeader="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
                    <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock
                                    Text="{Binding}"
                                    Style="{ThemeResource TitleTextBlockStyle}" 
                                    FontSize="16"
                                    Margin="-30,-20,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                </behaviors:NavigationViewHeaderBehavior>
            </i:Interaction.Behaviors>
            <Grid Margin="{StaticResource NavigationViewPageContentMargin}">
                <Frame x:Name="NavigationFrame" Margin="0,0,0,0"/>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-75,-30,0">
                    <TextBlock x:Name="wlcmtxt" Text="Welcome" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="13" FontWeight="Normal" Foreground="DarkGreen" FontFamily="Dubai Light" Height="24" Margin="0,0,0,0"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Stretch" Height="60" VerticalAlignment="Bottom" Margin="0,0,0,20" >
                    <Button x:Name="GetSampleFilesButton" Content="Get Sample Files" HorizontalAlignment="Left" Height="35" Margin="0,0,0,-60" Background="#25B552" Foreground="White" Click="GetSampleFiles_Click" IsTabStop="False"/>
                    <Button Content="Simple Guide" HorizontalAlignment="Left" Background="#25B552" Foreground="White" Height="35" Margin="140,0,0,-60" Click="Click_on_Get_Help" IsTabStop="False"/>
                    <Button Content="Get Visual Helps" HorizontalAlignment="Left" Background="#25B552" Foreground="White" Height="35" Margin="260,0,0,-60" Click="Click_on_Visual_Help" IsTabStop="False"/>
                    <Button x:Name="UpdateAvailable" Content="😍 Update Available!... ➡"  HorizontalAlignment="Left" Height="35" Margin="480,0,0,-10" Background="White" Foreground="BlueViolet"  Visibility="Collapsed" Click="CheckUpdateButton_Click" IsTabStop="False"/>
                    <Button x:Name="VersionTextBlock"  HorizontalAlignment="Right" Height="35" Margin="0,0,0,0" BorderBrush="Transparent" Background="Transparent" Foreground="OrangeRed" Click="CheckUpdateButton_Click" IsTabStop="False"/>
                    <TextBlock x:Name="ExpireDate"  HorizontalAlignment="Right" Margin="0,0,10,0" Foreground="Black"/>
                </StackPanel>
            </Grid>
        </NavigationView>
    </Grid>
</Page>
